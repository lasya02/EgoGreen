<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <ActionBar title="Login" icon="" />

    <FlexboxLayout class = "page"> 
        <StackLayout class="form">

            <Label class = "header" text = "Login" > </Label> 

            <StackLayout class = "input-field"> 
                <Label class = "input" text = "Username"> </Label> 
                <TextField class = "input" hint = "Enter Username" text = "{{ username }}"> </TextField>
                <StackLayout class = "hr-light"> </StackLayout>
            </StackLayout>

             <StackLayout class = "input-field"> 
                <Label class = "input" text = "Password"> </Label> 
                <TextField class = "input" hint = "Enter Password" text = "{{ password }}" secure = "true"> </TextField>
                <StackLayout class = "hr-light"> </StackLayout>
            </StackLayout>

            <Button text = "Need to create an account" tap = "register"> </Button>

            <Button text = "Login" tap = "dashboard" class = "btn btn-primary"> </Button>
        </StackLayout>
    </FlexboxLayout>

</Page>